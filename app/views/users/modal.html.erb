<%= turbo_frame_tag "modal" do %>
  <div class="modal-container">
    <div class="modal-content">
      <h2>Are you sure you want to delete this user?</h2>
      <p class="name-text">Name: <%= @user.first_name %> <%= @user.last_name %></p>
      <div class="modal-actions">
        <%= link_to "Cancel", "#", data: { turbo_frame: "modal" }, class: "button manage-button" %>
        <%= link_to "Delete", user_path(@user), data: { turbo_method: :delete, turbo_action: "replace" }, class: "button confirm-button" %>
      </div>
    </div>
  </div>
<% end %>
