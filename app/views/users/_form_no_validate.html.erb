<div class="form-container-modal">
  <h1>Register Form</h1>
  <%= form_with model: @user, local: true do |form| %>
    <div class="form-items-container">
      <div class="form-item-flex">
        <div class="form-item">
          <%= form.label :first_name, "First Name" %>
          <%= form.text_field :first_name %>
        </div>
        <div class="form-item">
          <%= form.label :last_name, "Last Name" %>
          <%= form.text_field :last_name %>
        </div>
      </div>
      <div class="form-item-flex">
        <div class="form-item">
          <%= form.label :birthday %>
          <%= form.date_field :birthday, max: 18.years.ago.to_date %>
        </div>
        <div class="form-item">
          <%= form.label :gender %>
          <div class="form-item-gender">
            <%= form.collection_radio_buttons :gender, User.genders.keys.map { |gender| [gender.capitalize, gender] }, :last, :first%>
          </div>
        </div>
      </div>
      <div class="form-item-flex">
        <div class="form-item">
          <%= form.label :email %>
          <%= form.email_field :email %>
        </div>
        <div class="form-item">
          <%= form.label :phone %>
          <%= form.telephone_field :phone %>
        </div>
      </div>
      <div class="form-item">
        <%= form.label :subject %>
        <%= form.select :subject, options_for_select([["Choose your subject", nil], "HTML", "CSS", "JS"], disabled: "Choose your subject") %>
      </div>
    </div>
    <div style="display: flex; gap: 1rem">
      <%= form.submit "Submit", class: "submit-button"%>
      <button class="button" type="button" data-action="click->registration-modal#close" style="color:black">Cancel</button>
    </div>
  </div>
<% end %>